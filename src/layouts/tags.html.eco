---
layout: default
---

<div class="posts pure-g">
    <h1 class="content-subhead pure-u-1">Posts tagged with: <%= @document.tag %></h1>
    <% for post in @getCollection('documents').findAll({tags: '$in': @document.tag}, [date:-1]).toJSON(): %>
        <%- @partial('post-lists.html.eco', {post: post})%>
    <% end %>
</div>